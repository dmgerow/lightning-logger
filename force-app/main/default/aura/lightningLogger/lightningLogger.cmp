<aura:component extensible="true" abstract="true" controller="LightningLoggerController">
    <aura:attribute name="isLightningDebugModeEnabled" type="Boolean" default="false" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:if isTrue="{!v.isLightningDebugModeEnabled}">
        <p><lightning:formattedText value="Debug mode enabled." /></p>
    </aura:if>
</aura:component>